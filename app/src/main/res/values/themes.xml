<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EvoCharge" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/purple</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.EvoCharge" parent="Base.Theme.EvoCharge" />

    <style name="Auth.Theme.EvoCharge" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/purple</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    <style name="Dashboard.Theme.EvoCharge" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorButtonNormal">@color/blue</item>
        <item name="colorPrimaryContainer">@color/baby_blue</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <item name="colorSurface">@color/powder_blue</item>
        <item name="colorPrimaryInverse">@color/baby_blue</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
        <item name="colorSecondaryContainer">@color/baby_blue</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
</resources>